<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--
    Padding for ViewPager must be set outside the ViewPager itself
    because with padding, EdgeEffect of ViewPager become strange.
    -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="@dimen/tab_height">

        <android.support.v4.view.ViewPager
            android:id="@+id/pager"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </FrameLayout>

    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#55acee"
        android:orientation="vertical">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#55acee"
            android:minHeight="@dimen/abc_action_bar_default_height_material"
            app:popupTheme="@style/Theme.AppCompat.Light.DarkActionBar"
            app:theme="@style/Toolbar">
     <!--            android:background="#18376a"-->

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tweetsorttext"
                    android:gravity="left"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"
                    android:textSize="23dp"
                    android:fontFamily="Arial"
                    android:text="Tweet SORT"/>

                <Switch
                    android:id="@+id/togglebutton"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tweetsorttext"
                    android:gravity="left"
                    android:showText="true"
                    android:textOn="ON"
                    android:textOff="OFF" />
           </RelativeLayout>

            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/myRadioGroup"
                android:layout_gravity="right"
                android:layout_marginRight="10dp"
                android:checkedButton="@+id/retweetsort">

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/favoritesort"
                    android:textColor="#FFFFFF"
                    android:text="Favourite" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/retweetsort"
                    android:textColor="#FFFFFF"
                    android:text="Retweet" />

            </RadioGroup>

        </android.support.v7.widget.Toolbar>

        <com.example.pranjal.myviewpager.SlidingTabLayout
            android:id="@+id/sliding_tabs"
            android:layout_width="match_parent"
            android:layout_height="@dimen/tab_height"
            android:background="#55acee" />
    </LinearLayout>

</FrameLayout>
